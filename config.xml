<?xml version='1.0' encoding='utf-8'?>
<widget id="com.hugpro.hugomidterms202" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Hugo - CMSC 202 Midterms </name>
    <description>
		App with four functions:
		
			1. Show Battery Status
			2, Show Geo Location
			3. Vibrate Phone
			4. Click and Save Photo
			
		by Earl Royce Hugo
		
	</description>
    <author email="ebhugo@up.edu.ph">
        Earl Royce Hugo
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
   
    <engine name="android" spec="^7.1.1" />
    <engine name="browser" spec="^5.0.4" />
   
    <plugin name="cordova-plugin-camera" spec="^4.0.3" />
    <plugin name="cordova-plugin-battery-status" spec="^2.0.2" />
    <plugin name="cordova-plugin-geolocation" spec="^4.0.1" />
    <plugin name="cordova-plugin-vibration" spec="^3.1.0" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    
	<preference name="phonegap-version" value="cli-8.0.0" />
    <preference name="Orientation" value="portrait" />
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />
    
	<feature name="http://api.phonegap.com/1.0/camera" />
    <feature name="http://api.phonegap.com/1.0/file" />
    <feature name="http://api.phonegap.com/1.0/geolocation" />
    
	<icon src="res/icon.png" />
</widget>